<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{4}:%L - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="iom.orb.brg.Engine" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="com.sas.iom" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="com.sas.meta" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="com.sas.metadata" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="com.sas.services.connection" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="com.sas.security.sspi" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="com.sas.net.crypto" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>